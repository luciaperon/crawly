{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@Controllers": ["Controllers/index"],
      "@Database/*": ["Database/*"],
      "@Models/*": ["Models/*"],
      "@Services/*": ["Services/*"],
      "@Modules": ["Modules/index"],
      "@Interfaces": ["Modeles/Interfaces/*"],
      "@Common": ["Common/index"]
    }
  }
}
